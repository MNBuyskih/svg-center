{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["es6", "es2015"],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "types": ["node", "mocha"],
    "typeRoots": ["./node_modules/@types",
      "./src/types"
    ],
    "esModuleInterop": true,
    "alwaysStrict": false,
    "noImplicitUseStrict": true
  }
}
